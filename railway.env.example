# Railway Environment Variables
# Copy these to Railway dashboard after deployment

# Database Configuration
TIMESCALE_URL=jdbc:postgresql://postgres:5432/railway
TIMESCALE_USER=postgres
TIMESCALE_PASS=your_password_here

# ClickHouse (if needed)
CLICKHOUSE_URL=jdbc:clickhouse://clickhouse:8123/railway
CLICKHOUSE_USER=default
CLICKHOUSE_PASS=

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# AI Configuration (Optional)
AI_PROVIDER=ollama
AI_MODEL=qwen2.5:14b-instruct
AI_ENDPOINT=http://localhost:11434/v1/chat/completions
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.2
AI_TIMEOUT_MS=200000

# OCR Configuration
OCR_ENABLED=true
OCR_LANGUAGE=eng

# Rate Limiting
RATE_LIMIT_DEFAULT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_DEFAULT_REQUESTS_PER_HOUR=1000

# Privacy Configuration
PRIVACY_ENABLED=false
PRIVACY_ANONYMIZE_DATA=false
PRIVACY_PERSIST_IMAGES=true
PRIVACY_DATA_RETENTION_DAYS=30

# Segmentation Configuration
SEG_ENDPOINT=http://localhost:8088/predict
SEG_TIMEOUT_MS=4000
SEG_ENABLED=true
SEG_FORCE_SEGMENTATION=false
SEG_FORCE_GEOMETRY=false

# Market Data Configuration
MARKETDATA_PRIMARY_PROVIDER=timescale
MARKETDATA_RECONCILIATION_ENABLED=true
MARKETDATA_RECONCILIATION_TOLERANCE=0.01
